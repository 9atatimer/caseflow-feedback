<%= form_for @feedback, url: feedback_path do |f| %>

<% if @feedback.errors.any? %>
  <div id="error_explanation">
    <h1>
      <%= pluralize(@feedback.errors.count, "error") %> prohibited this feedback from being saved:
    </h1>
    <ul>
      <% @feedback.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div>
  <h1>Tell us about your experience with Caseflow Certification. </h1>
  <div> What's working well? What's not working? Your comments will help us improve Caseflow for everyone.</div>
</div>
<p>
  <%= f.label :feedback %>
  <%= f.text_area :feedback %>
</p>

<p>
  <%= f.submit "Send Feedback" %>
</p>
<% end %>
