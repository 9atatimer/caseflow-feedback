<%= form_for @feedback, url: feedback_path do |f| %>
  <div class="cf-app-segment cf-app-segment--alt">

    <% if @feedback.errors.any? %>
      <div id="error_explanation">
        <h1>
          <%= pluralize(@feedback.errors.count, "error") %> prohibited this feedback from being saved:
        </h1>
        <ul>
          <% @feedback.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div>
      <h2>Tell us about your experience with <%= app_display_name %>.</h2>
      <p> What's working well? What's not working? Your comments will help us improve Caseflow for everyone.</p>
    </div>
    <div>
      <%= f.text_area :feedback, "aria-label": "Feedback" %>
    </div>
  </div>
  <div class="cf-app-segment">
    <a href='<%= app_display_url %>'>
      <input type="button" value="Cancel" class="cf-push-left cf-submit">
   </a>
    <%= f.submit "Send Feedback", class: "cf-push-right cf-submit" %>
  </div>
<% end %>
