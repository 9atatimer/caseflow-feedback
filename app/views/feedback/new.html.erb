<%= form_for @feedback, url: feedback_path do |f| %>

<% if @feedback.errors.any? %>
  <div id="error_explanation">
    <h1>
      <%= pluralize(@feedback.errors.count, "error") %> prohibited this feedback from being saved:
    </h1>
    <ul>
      <% @feedback.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div>
    <h1>We welcome your feedback.</h1>
    Let the Caseflow team know how Caseflow Certification is working for you. <br/>Your comments will help us improve it for everyone.
</div>
<p>
  <%= f.label :feedback %>
  <%= f.text_area :feedback %>
</p>

<p>
  <%= f.submit "Send Feedback" %>
</p>
<% end %>
